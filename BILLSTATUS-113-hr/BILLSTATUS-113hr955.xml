      <billSummaries>
        <item>
          <lastSummaryUpdateDate>2013-05-06T18:47:31Z</lastSummaryUpdateDate>
          <actionDesc>Introduced in House</actionDesc>
          <versionCode>00</versionCode>
          <updateDate>2013-03-05T05:00:00Z</updateDate>
